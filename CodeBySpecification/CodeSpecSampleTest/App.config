		<!--<add key="UI.Tests.Target.Browser" value="Chrome" /> -->
		<!--<add key="UI.Tests.Target.Browser" value="Android" /> -->
		<add key="UI.Tests.Appium.URI" value="http://172.20.8.164:4723/wd/hub" />
		<add key="UI.Tests.Appium.capability.platformName" value="iOS" />
		<add key="UI.Tests.Appium.capability.platformVersion" value="9.0" />
		<add key="UI.Tests.Appium.capability.deviceName" value="Facilit iPhone 6 Plus" />
		<add key="UI.Tests.Appium.capability.bundleId" value="no.facilit.HelpdeskFDVUTest" />

